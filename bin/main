#!/usr/bin/env ruby

def welcome
    puts "Welcome to the Tic Tac Toe game!"
    while 1
        puts "do u want to proced? (y/n)"
        user_answer = gets.chomp
        if user_answer.match(/y/)
           puts "lets go to the next method"
           #instru
           break 
        elsif user_answer.match(/n/)
            puts "bye"
            break
        else
            puts "wrong answer"
        end
    end


end


welcome
puts "blahc dklbjdgksf"